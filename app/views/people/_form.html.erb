<%= form_with(model: person) do |form| %>
  <% if person.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
        <% person.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <div>
        <%= form.label :suffix, style: "display: block" %>
        <%= form.text_field :suffix %>
      </div>

      <div>
        <%= form.label :first_name, style: "display: block" %>
        <%= form.text_field :first_name %>
      </div>

      <div>
        <%= form.label :last_name, style: "display: block" %>
        <%= form.text_field :last_name %>
      </div>

      <div>
        <%= form.label :birtday, style: "display: block" %>
        <%= form.date_field :birtday %>
      </div>

      <div>
        <%= form.label :comment, style: "display: block" %>
        <%= form.text_area :comment %>
    </div>
    

    <div>
            <%= form.fields_for :address do |address_form|%>

              <%= address_form.label :street, style: 'display: block' %>
              <%= address_form.text_field :street %>

              <%= address_form.label :city, style: 'display: block' %>
              <%= address_form.text_field :city %>

              <% end %>
    </div>

    </div>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
